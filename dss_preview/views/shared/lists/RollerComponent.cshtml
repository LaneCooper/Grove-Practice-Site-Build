@model Ingeniux.Runtime.ICMSElement
 @using Ingeniux.Runtime
@{
    if (Model != null)
    {
        <!--LayerSlider begin-->
        <!-- Note: Layerslider is configured in js/grove-slider.js -->
        <div class="hidden-xs">
            <div id="layerslider" style="width: 100%; height: 405px; margin: 0px auto;">
              @{ 
                  foreach (ICMSElement roller in Model.Elements())
                  {
                      <div class="ls-slide" data-ls="transition2d:5;">
                        <img class="ls-bg" src="images/@roller.GetElementValue("BackgroundImage")"  
                             alt="@roller.Element("RollerImage").GetAttributeValue("AlternateText")">
                        <img class="ls-l" src="images/@roller.GetElementValue("RollerImage")" 
                             alt="@roller.Element("RollerImage").GetAttributeValue("AlternateText")" 
                             style="top:15px; left:650px;"
                             data-ls=" durationin : 2000; delayin : 0; offsetxin: right;  offsetxout: right; ">
                    
                        <div class="ls-l large-caption"
                             style="top:120px; left:20px;"
                             data-ls="delayin: 750; offsetxin: 0; offsetxout: 0;">
                            @roller.GetElementValue("RollerText")
                        </div>
                      </div>

                   }
                 }
            </div>
        </div>
       }
        <!--LayerSlider end-->
        <!-- Layerslider substitute on x-small devices -->
 }

